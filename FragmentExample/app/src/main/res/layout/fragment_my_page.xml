<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/fragment_my_page_tabBar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_my_page_fragment_btn"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/fragment_my_page_tabBar"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_my_page_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="프로필"
            android:textSize="15sp"
            android:textColor="#37c2f7"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/fragment_my_page_my_shopping_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="나의 쇼핑"
            android:textSize="15sp"
            android:textColor="#7d7d7d"
            android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_my_page_fragment_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_my_page_fragment_btn">


    </FrameLayout>

</RelativeLayout>